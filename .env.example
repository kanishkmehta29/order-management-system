# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/order_management
MONGODB_DATABASE=order_management

# Kafka Configuration
KAFKA_BROKER=kafka:9092
KAFKA_GROUP_ID_ORDER=order-service
KAFKA_GROUP_ID_INVENTORY=inventory-service
KAFKA_GROUP_ID_PAYMENT=payment-service
KAFKA_GROUP_ID_NOTIFICATION=notification-service

# Service Ports
ORDER_SERVICE_PORT=50051
INVENTORY_SERVICE_PORT=50052
PAYMENT_SERVICE_PORT=50053
NOTIFICATION_SERVICE_PORT=50054

# MongoDB Credentials (if needed)
MONGODB_USERNAME=root
MONGODB_PASSWORD=example

# Service Specific Settings
PAYMENT_PROCESSING_TIMEOUT=30s
NOTIFICATION_EMAIL_FROM=notifications@example.com
NOTIFICATION_SMS_ENABLED=false

# Logging Configuration
LOG_LEVEL=info